{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@lib/*": ["src/lib/*"],
			"@features/*": ["src/features/*"],
			"@src/*": ["src/*"]
		},
		"types": ["bun"]
	},
	"include": ["src", "tests"]
}
